{
  "compilerOptions": {
    "typeRoots": ["node_modules/@types", "src/types"],
    "jsx": "react",
    "target": "ES6",
    "noImplicitAny": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src"]
}
